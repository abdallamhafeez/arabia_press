<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="production_request_operation_order_document">

        <t t-call="sale_manufacturing_integration.external_layout_custom">
            <div class="page"
                 style="page-break-inside:avoid; page-break-after:auto;">

                <style type="text/css">
                    .columns-2{
                    width: 25%;
                    -webkit-column-count: 2; /* Chrome, Safari, Opera */
                    -moz-column-count: 2; /* Firefox */
                    column-count: 2;
                    -webkit-column-gap: 5px; /* Chrome, Safari, Opera */
                    -moz-column-gap: 5px; /* Firefox */
                    column-gap: 10px;
                    column-fill: balance;
                    -moz-column-fill: balance;
                    -webkit-column-fill: balance;
                    height: 5em;
                    text-align: justify;
                    -webkit-columns: 0 0;
                    }
                    table { page-break-inside:auto }
                    thead { display:table-header-group }
                    tr { page-break-inside:avoid; page-break-after:auto }

                </style>
                <div class="row text-center mb-1">
                    <div class="col-12 text-center">
                        <h1>
                            <span>Operation Order Number</span>
                            <span t-esc="doc.name"/>
                        </h1>

                    </div>
                </div>
                <div class="row">
                    <table class="table table-borderless m-0 table-fixed">
                        <tr>
                            <!-- used to fix column width -->
                            <th style="width: 20%"/>
                            <th style="width: 30%"/>
                            <th style="width: 15%"/>
                            <th style="width: 35%"/>
                        </tr>
                        <tr>
                            <td class="p-0">
                                <span>Date:</span>
                            </td>
                            <td class="p-0">
                                <span t-field="doc.date_planned_start"
                                      t-options='{"format": "dd / MM / yyyy"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td class="p-0">
                                <span>Customer Name:</span>
                            </td>
                            <td class="p-0">
                                <span t-esc="doc.partner_id.name"/>
                            </td>
                            <td class="p-0 ">
                                <span>Operation Name:</span>
                            </td>
                            <td class="text-left p-0">
                                <span t-field="doc.product_id.name"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="p-0">
                                <span>Quantity:</span>
                            </td>
                            <td class="p-0">
                                <span t-esc="doc.product_qty"/>
                            </td>
                            <td class="p-0 ">
                                <span>Size:</span>
                            </td>
                            <td class="text-left p-0">
                                <span>
                                    .................................................
                                </span>
                            </td>
                        </tr>
                    </table>

                </div>
                <div>
                    <t t-foreach="doc.work_center_answer_ids.sorted(key=lambda l: (l.id)).mapped('mrp_routing_workcenter_id')"
                       t-as="work_center">
                        <div class="row" style="background-color: gray">
                            <div class="col-12 text-center">
                                <t t-esc="work_center.name"/>
                            </div>
                        </div>
                        <div>
                            <t t-set="len(doc.work_center_answer_ids.sorted(key=lambda l: (l.id)).filtered(lambda line: line.mrp_routing_workcenter_id == work_center))"
                               t-value="answer_number"/>
                            <!--                        <section style="width: 25%; -webkit-column-count: 2; /* Chrome, Safari, Opera */ -moz-column-count: 2; /* Firefox */ column-count: 2; -webkit-column-gap: 5px; /* Chrome, Safari, Opera */ -moz-column-gap: 5px; /* Firefox */ column-gap: 10px; column-fill: balance; -moz-column-fill: balance; -webkit-column-fill: balance; height: 5em; text-align: justify; -webkit-columns: 0 0;">-->
                            <!--                            <table class="table table-borderless">-->
                            <!--                                <tbody >-->
                            <!--                                    <t t-foreach="doc.work_center_answer_ids.sorted(key=lambda l: (l.id)).filtered(lambda line: line.mrp_routing_workcenter_id == work_center and line.question_type !='free_text')"-->
                            <!--                                       t-as="answer_line">-->
                            <!--                                        <tr>-->
                            <!--                                            <td >-->
                            <!--                                                <span t-field="answer_line.name"/>-->
                            <!--                                                <span>:</span>-->
                            <!--                                            </td>-->
                            <!--                                            <td class="text-left">-->
                            <!--                                                <span t-field="answer_line.answer"/>-->
                            <!--                                            </td>-->
                            <!--                                        </tr>-->
                            <!--                                    </t>-->
                            <!--                                </tbody>-->
                            <!--                            </table>-->
                            <!--                        </section>-->
                            <div class="justify-content-between">
                                <t t-set="even_answers" t-value="[]"/>
                                <t t-set="odd_answers" t-value="[]"/>
                                <t t-set="line_number" t-value="0"/>
                                <t t-foreach="doc.work_center_answer_ids.sorted(key=lambda l: (l.id)).filtered(lambda line: line.mrp_routing_workcenter_id == work_center and line.question_type !='free_text')"
                                   t-as="answer_line">
                                    <t t-set="line_number"
                                       t-value="line_number + 1"/>
                                    <t t-if="(line_number % 2) == 0">
                                        <t t-set="even_answers"
                                           t-value="even_answers + [answer_line.id]"/>
                                    </t>
                                    <t t-else="">
                                        <t t-set="odd_answers"
                                           t-value="odd_answers + [answer_line.id]"/>
                                    </t>
                                </t>

                                <div class="row">
                                    <div class="col-6"
                                         style="width:50%;">
                                        <t t-foreach="doc.work_center_answer_ids.sorted(key=lambda l: (l.id)).filtered(lambda line: line.mrp_routing_workcenter_id == work_center and line.question_type !='free_text')"
                                           t-as="answer_line">

                                            <div t-if="answer_line.id in odd_answers">
                                                <table class="table table-borderless" style="padding: 0px;">
                                                    <thead style="display: none;">
                                                        <th style="width: 30%;  max-height: 0px !important;"/>
                                                        <th style="width: 80%;  max-height: 0px !important;"/>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>
                                                                <span t-field="answer_line.name"/>
                                                                <span>:</span>
                                                            </td>
                                                            <td>
                                                                <span t-field="answer_line.answer"/>
                                                            </td>
                                                        </tr>
                                                    </tbody>

                                                </table>
                                            </div>
                                        </t>

                                    </div>
                                    <div class="col-6"
                                         style="width:50%;">
                                        <t t-foreach="doc.work_center_answer_ids.sorted(key=lambda l: (l.id)).filtered(lambda line: line.mrp_routing_workcenter_id == work_center and line.question_type !='free_text')"
                                           t-as="answer_line">
                                            <div t-if="answer_line.id in even_answers">
                                                <table class="table table-bordered" style="padding: 0px;">
                                                    <thead style="display: none;">
                                                        <th style="width: 30%; max-height: 0px !important;"/>
                                                        <th style="width: 80%; max-height: 0px !important;"/>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>
                                                                <span t-field="answer_line.name"/>
                                                                <span>:</span>
                                                            </td>
                                                            <td>
                                                                <span t-field="answer_line.answer"/>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>

                                        </t>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <t t-foreach="doc.work_center_answer_ids.sorted(key=lambda l: (l.id)).filtered(lambda line: line.mrp_routing_workcenter_id == work_center and line.question_type =='free_text')"
                           t-as="answer_line_text">
                            <div class="row">
                                <div>
                                    <span t-field="answer_line_text.name"/>
                                </div>
                                <div>
                                    <span t-field="answer_line_text.answer"/>
                                </div>
                            </div>
                        </t>
                    </t>
                </div>
                <div class="row">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <td style="text-align: left;">
                                    <span>Warehouse Responsible</span>

                                </td>
                                <td style="text-align: center;">
                                    <span>Cutting Responsible</span>
                                </td>
                                <td style="text-align: right;">
                                    <span>Approval</span>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: left;">
                                    <span>...............................</span>
                                </td>
                                <td style="text-align: center;">
                                    <span>...............................</span>
                                </td>
                                <td style="text-align: right;">
                                    <span>...............................</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>


    <template id="production_request_operation_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="sale_manufacturing_integration.production_request_operation_order_document"
                   t-lang="user.lang"/>
            </t>
        </t>
    </template>
</odoo>
